<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.cars.any? %>
      <h3>Cars (<%= @user.cars.count %>)</h3>
      <ol class="cars">
        <%= render @cars %>
      </ol>
      <%= paginate @cars %>
    <% end %>
  </div>
</div