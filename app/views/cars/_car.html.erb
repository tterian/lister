<div class="row">
	<div class="large-12 column">
	<li id="car-<%= car.id %>">
		
		<span class="content">
			<%= image_tag car.picture.url if car.picture? %>
			<%= car.note %>
		</span>
	<span class="timestamp">
    	added <%= time_ago_in_words(car.created_at) %> ago
    	<% if current_user?(car.user) %>
    		<%= link_to "delete", car, method: :delete, data: { confirm: "You sure?" } %>

    	<% end %>
  	</span>
	</li>
</div>
</div>