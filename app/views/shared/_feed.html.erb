<div class="panel radius feed-field">
    <div class="row">
      	<div class="large-12 columns">
            <div class="left">
      			<label>
              		<select>
                		<option value="price-high-to-low">Price (High to Low) </option>
                		<option value="price-low-to-high">Price (Low to High) </option>
              		</select>
            	</label>
            </div>

            <div class="right">
            	<p><%= Car.count %> matches</p>
            </div>
        </div>
        <hr>
        <div class="large-12 columns">
            <% if @cars.any? %>
                <div class="cars">
                    <%= render @cars %>
                </div>
            <% end %>

            <%= paginate @cars %>

        </div>
    </div>
</div>